<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>

	<view name="basic, detailed">
		<image name="background2" extra="true">
			<path>../../_assets/img/bg1_gameliste_detailed.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>3</zIndex>
		</image>
		
		<text name="logoText">
           <pos>0.78 0.04</pos>
			<size>0.30 0.11</size>
           <color>4646df</color>
           <alignment>left</alignment >
        </text>
		<image name="logo">
			<path>../../_assets/img/systems_logos/$system - whlogo.png</path>
			<path>../../_assets/img/systems_logos/$system - whlogo.svg</path>
			<pos>0.78 0.04</pos>
			<size>0.30 0.11</size>
			<maxSize>0.30 0.11</maxSize>
			<zIndex>100</zIndex>
		</image>
		<image name="logo" region="eu">
			<path>../../_assets/img/systems_logos/$system - whlogo-eu.png</path>
			<path>../../_assets/img/systems_logos/$system - whlogo-eu.svg</path>
		</image>
		<image name="logo" region="jp">
			<path>../../_assets/img/systems_logos/$system - whlogo-jp.png</path>
			<path>../../_assets/img/systems_logos/$system - whlogo-jp.svg</path>
		</image>
		<image name="logo" region="us">
			<path>../../_assets/img/systems_logos/$system - whlogo-us.png</path>
			<path>../../_assets/img/systems_logos/$system - whlogo-us.svg</path>
		</image>

        
        <textlist name="gamelist" extra="true">
			<pos>0.60 0.18</pos>
			<size>0.39 0.745</size>
			<selectorColor>4646df80</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>ffffff</secondaryColor>			
			<alignment>right</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<selectorHeight>0.05</selectorHeight>
			<zIndex>80</zIndex>
            <fontPath>:/f8bitfortressplus.ttf</fontPath>
            <fontSize>7</fontSize>
			<forceUppercase>1</forceUppercase>
            <!-- Line spacing en valeur entier obligatoire pour CRT -->
            <lineSpacing>2</lineSpacing> 
		</textlist>
   
   
       <image name="md_image">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>0.60 0.7</size>
			<zIndex>1</zIndex>
		</image>
		<video name="md_video">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>0.6 0.7</size>
			<zIndex>2</zIndex>
		</video>
        
        
        <!--/// COLONNE INFO ///-->
        <rating name="md_rating">
			<filledPath>../../_assets/img/icons/star_filled.png</filledPath>
			<unfilledPath>../../_assets/img/icons/star_empty.png</unfilledPath>
			<pos>0.01 0.68</pos>
		</rating>
        <text name="md_lbl_players">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
			<forceUppercase>1</forceUppercase>
			<size>0.15 0.02</size>
			<pos>0.40 0.695</pos>
			<color>cfcfcf</color>
		</text>
		<text name="md_players">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
			<forceUppercase>1</forceUppercase>
			<size>0.144 0.02</size>
			<color>cfcfcf</color>
			<pos>0.55 0.6950</pos>
		</text>
		<text name="md_genre">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>6</fontSize>
			<forceUppercase>1</forceUppercase>
			<size>0.6 0.02</size>
			<pos>0.01 0.74</pos>
			<color>4646df</color>
		</text>
		<text name="control" extra="true">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>6</fontSize>
			<forceUppercase>1</forceUppercase>
			<color>cfcfcf</color>
		</text>
		<text name="no_image" extra="true">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
			<forceUppercase>1</forceUppercase>
			<color>cfcfcf</color>
		</text>
		<text name="md_description">
			<fontPath>:/f8bitfortressplus.ttf</fontPath>
			<fontSize>7</fontSize>
			<color>cfcfcf</color>
			<size>0.55 0.145</size>
			<pos>0.014 0.78</pos>
		</text>
         

    </view>
	
	
</theme>